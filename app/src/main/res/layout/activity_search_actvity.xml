<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajeev.newer.SearchActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:defaultQueryHint="Enter keywords or phrases to search for."
        />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/Articles_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">
        <ListView
            android:id="@+id/articles_search_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progress_indicator_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/loading_feedback_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_indicator_search"
            android:layout_centerInParent="true"
            android:text="@string/loading_feedback"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/empty_state_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/empty_list_imageView"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_chrome_reader_mode_black_24dp"
                />
            <TextView
                android:id="@+id/empty_list_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_list_imageView"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:padding="8dp"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="@string/search_empty_header"
                />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
